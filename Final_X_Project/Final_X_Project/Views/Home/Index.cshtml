<div class="row main-page">
    <div class="col-md-12">
        <h2 class="header-center">Вход в систему</h2>
        <div class="col-md-12 main-enter-block">
            <div class="editor-field"><p class="inline-p">Логин <input class="inline-input" type="text" id="login" name="login" /></p></div>
            <div class="editor-field"><p class="inline-p">Пароль <input class="inline-input" type="text" id="password" name="password" /></p></div>
            <p><input id="btnEnter" type="submit" value="Вход" /></p>
            @Html.ActionLink("Регистрация", "Registration", "Home")
            <p><a class="btn btn-default">Узнать о системе больше &raquo;</a></p>
        </div>
    </div>
</div>

<div class="loader" id="AjaxLoader" style="display:none;">
    <div class="strip-holder">
        <div class="strip-1"></div>
        <div class="strip-2"></div>
        <div class="strip-3"></div>
    </div>
</div>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
@Scripts.Render("~/scripts/Validation.js")

