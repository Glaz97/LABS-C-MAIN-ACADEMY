@model Final_X_Project.Models.PizzaUsers

<div class="row main-page">
    <div class="col-md-12">
        <h2 class="header-center">Форма регистрации</h2>
        <div class="col-md-12 main-enter-block">
            @using (Html.BeginForm("Registration", "Home", FormMethod.Post, new { id = "registerForm", enctype = "multipart/form-data" }))
            {
                <div class="editor-field"><p class="inline-p">Логин @Html.EditorFor(model => model.UserLogin)</p></div>
                <div class="editor-field"><p class="inline-p">Пароль @Html.EditorFor(model => model.Password)</p></div>
                <div class="editor-field"><p class="inline-p">Имя @Html.EditorFor(model => model.Name)</div>
                <div class="editor-field"><p class="inline-p">Фамилия @Html.EditorFor(model => model.Surname)</p></div>
                <div class="editor-field"><p class="inline-p">Email @Html.EditorFor(model => model.Email)</p></div>
                <div class="editor-field"><p class="inline-p">Номер телефона <input class="inline-input" type="text" id="phoneNumber" name="phoneNumber" /></p></div>
                <div class="editor-field"><p class="inline-p">Адрес <input class="inline-input" type="text" id="adress" name="adress" /></p></div>
                <div class="editor-field"><p class="inline-p">День рождения @Html.EditorFor(model => model.DateOfBirth)</p></div>
                <p><input id="btnRegistration" type="button" value="Зарегистрироваться" /></p>
            }
            @Html.ActionLink("Назад", "Index", "Home")
        </div>
    </div>
</div>

@Scripts.Render("~/scripts/jquery-3.3.1.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
@Scripts.Render("~/scripts/Validation.js")